generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Role {
  ADMIN
  USER
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  firstName     String?
  lastName      String?
  phone         String?
  bio           String?
  avatar        String?
  skillLevel    SkillLevel     @default(BEGINNER)
  role          Role           @default(USER)
  codingHours   Int            @default(0)
  projects      Project[]
  savedProjects SavedProject[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  refreshTokens RefreshToken[]
  comments      Comment[]
}

model Project {
  id           String         @id @default(uuid())
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  title        String
  slug         String         @unique
  summary      String
  difficulty   SkillLevel
  content      String // markdown or rich text
  requirements String[] // array of strings
  coverImage   String?
  tags         Tag[]
  isPublic     Boolean        @default(true)
  metaData     MetaData[]
  projectSteps ProjectStep[]
  savedBy      SavedProject[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  comments     Comment[]
}

model ProjectStep {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  order     Int // 1, 2, 3...
  title     String
  content   String? // markdown or rich text
  images    String[] // Cloudinary URLs
}

model Comment {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MetaData {
  id        String  @id @default(uuid())
  likes     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  views     Int     @default(0)
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model SavedProject {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, projectId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @unique
  token     String
  user      User     @relation(fields: [userId], references: [id])
  expiredAt DateTime
  createdAt DateTime @default(now())
}
